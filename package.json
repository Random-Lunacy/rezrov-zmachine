{
  "name": "rezrov-zmachine",
  "version": "1.0.0",
  "description": "Z-machine interpreter in TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "lib/",
    "dist/",
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-esm-fix --ext .js",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\" \"package.json\" \"README.md\"",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:unit-coverage": "vitest run tests/unit/ --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:compliance": "vitest run tests/compliance/"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@types/glob": "^8.1.0",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.1",
    "chalk": "^5.3.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "globals": "^16.1.0",
    "nopt": "^8.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "readline-sync": "^1.4.10",
    "ts-node": "^10.9.2",
    "tsc-esm-fix": "^3.1.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "glob": "^11.0.2",
    "seedrandom": "^3.0.5"
  }
}
