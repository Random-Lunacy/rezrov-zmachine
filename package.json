{
  "name": "rezrov-zmachine",
  "version": "1.0.0",
  "description": "Z-machine interpreter in TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "lib/",
    "dist/",
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-esm-fix --ext .js",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\" \"package.json\" \"README.md\"",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:unit-coverage": "vitest run tests/unit/ --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:compliance": "vitest run tests/compliance/",
    "tools:objects": "tsx tools/GameObjectExample.ts",
    "tools:strings": "tsx tools/StringDumpExample.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/glob": "^9.0.0",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "ts-node": "^10.9.2",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "glob": "^11.0.3",
    "seedrandom": "^3.0.5"
  }
}
