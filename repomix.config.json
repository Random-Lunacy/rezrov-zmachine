{
  "output": {
    "style": "xml",
    "filePath": "rezrov-zmachine-output.xml",
    "removeComments": true,
    "removeEMptyLines": true,
    "showLineNumbers": false,
    "topFilesLength": 0,
    "compress": true
  },
  "ignore": {
    "customPatterns": [
      "docs/**",
      "**/*.config.{js,cjs,mjs,ts,json}",
      "**/*.{yml,yaml}",
      "**/test/fixtures/**",
      "**/package-lock.json",
      ".gitignore"
    ]
  }
}
